---
import Section from "./Section.astro";
---

<Section
  title="Somos Orgánica Café y Plantas"
  subtitle="Dónde el delicioso aroma del café recién preparado se fusiona con la frescura y belleza de las plantas"
  color="black"
  id="nosotros"
>

  <img
    slot="background"
    alt="Nosotros"
    class="h-full w-full object-cover object-center"
    src="nosotros.jpg"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  let imageElement = document.querySelector("#bg-image-models") as HTMLImageElement; // TypeScript

  if (isEdge()) {
    imageElement.src = "model-s.webp";
  } else {
    imageElement.src = "model-s.avif";
  }
</script>
